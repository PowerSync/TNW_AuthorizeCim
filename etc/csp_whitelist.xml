<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="authorize_net_direct_secure" type="host">secure.authorize.net</value>
                <value id="authorize_net_direct_test" type="host">test.authorize.net</value>
                <value id="authorize_net_direct_js" type="host">js.authorize.net</value>
                <value id="authorize_net_direct_jstest" type="host">jstest.authorize.net</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="authorize_net_direct_secure" type="host">secure.authorize.net</value>
                <value id="authorize_net_direct_test" type="host">test.authorize.net</value>
            </values>
        </policy>
        <policy id="form-action">
            <values>
                <value id="authorize_net_direct_secure" type="host">secure.authorize.net</value>
                <value id="authorize_net_direct_test" type="host">test.authorize.net</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="authorize_net_direct_apitest" type="host">apitest.authorize.net</value>
                <value id="authorize_net_direct_jstest" type="host">jstest.authorize.net</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
